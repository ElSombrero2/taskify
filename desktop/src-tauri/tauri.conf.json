{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "desktop",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "startDragging": true,
        "setSize": true,
        "minimize": true,
        "close": true,
        "maximize": true,
        "unmaximize": true
      },
      "os": {
        "all": true
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Taskify",
        "transparent": true,
        "decorations": false,
        "minHeight": 775,
        "minWidth": 1080,
        "fileDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.taskify.io",
      "icon": [
        "icons/logo.png",
        "icons/icon.ico"
      ]
    }
  }
}
